<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sae_s2_01.Controller" stylesheets="@/styles/style.css" styleClass="dashboard" hgap="10" vgap="10">
    <rowConstraints>
        <RowConstraints percentHeight="5" />
        <RowConstraints percentHeight="85" />
        <RowConstraints percentHeight="10" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="100" />
    </columnConstraints>
    <Label styleClass="title" text="Dashboard des Séismes" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />
    <HBox spacing="10.0" styleClass="chart-group" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <VBox spacing="10.0" styleClass="checkbox-group">
            <CheckBox text="Option 1" fx:id="checkBox1" selected="false"/>
            <CheckBox text="Option 2" fx:id="checkBox2" selected="false"/>
            <CheckBox text="Option 3" fx:id="checkBox3" selected="false"/>
            <CheckBox text="Option 4" fx:id="checkBox4" selected="false"/>
            <CheckBox text="Option 5" fx:id="checkBox5" selected="false"/>
            <CheckBox text="Option 6" fx:id="checkBox6" selected="false"/>
            <CheckBox text="Option 7" fx:id="checkBox7" selected="false"/>
        </VBox>
        <ImageView styleClass="map">
            <Image url="@/images/carte-regions-france-vierge.png"/>
        </ImageView>
        <VBox styleClass="chart">
            <PieChart fx:id="pieChart1" styleClass="chart-pie"/>
            <PieChart fx:id="pieChart2" styleClass="chart-pie"/>
        </VBox>
        <VBox spacing="10.0" styleClass="linechart-group">
            <LineChart fx:id="lineChart1" styleClass="chart">
                <xAxis>
                    <CategoryAxis label="Ville" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Nombre de séismes" side="LEFT" />
                </yAxis>
            </LineChart>
            <LineChart fx:id="lineChart2" styleClass="chart">
                <xAxis>
                    <CategoryAxis label="Ville" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Magnitude moyenne" side="LEFT" />
                </yAxis>
            </LineChart>
        </VBox>
    </HBox>
</GridPane>
